<Window x:Class="PlivanjeDesktop.Registracija"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlivanjeDesktop"
        mc:Ignorable="d"
        Title="Registracija" Height="350" Width="525">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <Menu Margin="0,0,20,0">
                <MenuItem Header="NATJECANJA"/>
                <MenuItem Header="KLUBOVI"/>
                <MenuItem Header="PLIVAČI">
                    <MenuItem Header="Veterani"/>
                    <MenuItem Header="Seniori"/>
                    <MenuItem Header="Mlađi seniori"/>
                    <MenuItem Header="Juniori"/>
                    <MenuItem Header="Mlađi juniori"/>
                    <MenuItem Header="Kadeti"/>
                    <MenuItem Header="Mlađi kadeti"/>
                    <MenuItem Header="Početnici"/>
                </MenuItem>
                <MenuItem Header="REKORDI">
                    <MenuItem Header="Muškarci"/>
                    <MenuItem Header="Žene"/>
                </MenuItem>
            </Menu>
        </StackPanel>
        <StackPanel Margin="80,0,0.4,-0.2" Grid.ColumnSpan="2">

            <TextBlock Height="23" HorizontalAlignment="Center" Margin="0,5,0,0" x:Name="RegisterHeading" Text="Registracija" VerticalAlignment="Top" FontSize="17" FontStretch="ExtraCondensed" RenderTransformOrigin="5.247,0.666"/>

            <TextBlock Height="20" HorizontalAlignment="Center" Margin="0,10,0,0" x:Name="name" Text="Ime" VerticalAlignment="Top" FontSize="12" FontStretch="ExtraCondensed" RenderTransformOrigin="5.247,0.666"/>
            <TextBox Height="20" HorizontalAlignment="Center" Margin="0,0,0,0" Name="textBoxName" VerticalAlignment="Top" Width="247" />
            <TextBlock Height="20" HorizontalAlignment="Center" Margin="0,5,0,0" x:Name="surname" Text="Prezime" VerticalAlignment="Top" FontSize="12" FontStretch="ExtraCondensed" RenderTransformOrigin="5.247,0.666"/>
            <TextBox Height="20" HorizontalAlignment="Center" Margin="0,0,0,0" Name="textBoxSurname" VerticalAlignment="Top" Width="247" />
            <TextBlock Height="20" HorizontalAlignment="Center" Margin="0,5,0,0" x:Name="email" Text="Email" VerticalAlignment="Top" FontSize="12" FontStretch="ExtraCondensed" RenderTransformOrigin="5.247,0.666"/>
            <TextBox Height="20" HorizontalAlignment="Center" Margin="0,0,0,0" Name="textBoxEmail" VerticalAlignment="Top" Width="247" />
            <TextBlock Height="20" HorizontalAlignment="Center" Margin="0,5,0,0" x:Name="password" Text="Lozinka" VerticalAlignment="Top" FontSize="12" FontStretch="ExtraCondensed" RenderTransformOrigin="5.247,0.666"/>
            <TextBox Height="20" HorizontalAlignment="Center" Margin="0,0,0,0" Name="textBoxPassword" VerticalAlignment="Top" Width="247" />
            <TextBlock Height="20" HorizontalAlignment="Center" Margin="0,5,0,0" x:Name="idLicence" Text="ID licence" VerticalAlignment="Top" FontSize="12" FontStretch="ExtraCondensed" RenderTransformOrigin="5.247,0.666"/>
            <TextBox Height="20" HorizontalAlignment="Center" Margin="0,0,0,0" Name="textBoxIdLicence" VerticalAlignment="Top" Width="247" />

            <Button Height="20" HorizontalAlignment="Center" Margin="0,15,0,0" x:Name="register" Content="Registriraj se" RenderTransformOrigin="6.226,0.65"/>


            <TextBlock Height="50" HorizontalAlignment="Center" Margin="0,5,0,0" x:Name="textBlockHeading" VerticalAlignment="Top" FontSize="10" FontStyle="Italic" Padding="5"><InlineUIContainer>

            

            

            </InlineUIContainer></TextBlock>




        </StackPanel>
    </Grid>
</Window>
