@model IEnumerable<PlivanjeWeb.Models.HallViewModel>
@{
    ViewBag.Title = "Dvorane i bazeni";
}

<h2>Popis dvorana i pripadajućih bazena</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>

                Id dvorane

            </th>

            <th>

                Ime dvorane

            </th>
            <th>

                Grad

            </th>
            <th>

                Adresa

            </th>
            <th>
                Broj bazena (25 m)
            </th>
            <th>
                Broj bazena (50 m)
            </th>
</thead>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Place)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <th>
            @Html.DisplayFor(modelItem => item.count25)
        </th>
        <th>
            @Html.DisplayFor(modelItem => item.count50)
        </th>
     
    </tr>

    }




</table>


    
 
