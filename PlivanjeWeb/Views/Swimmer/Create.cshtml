@model PlivanjeWeb.Models.SwimmerViewModel


@{

    var gr = TempData["Error"];
    var msgErr = "";
    if (gr != null)
    {
        msgErr = gr.ToString();
    }
}

@if (!string.IsNullOrWhiteSpace(msgErr))
{
    <div class="alert alert-danger alert alert-dismissible" role="alert" id="alert">
        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
        @msgErr
    </div>
}
@using (Html.BeginForm("Create", "Swimmer", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <br />
    <div class="row">
        <div class="col-sm-12">
            <div class="panel panel-default">

                <div class="panel-body">
                    <div class="col-md-12">
                        <table class="table table-borderless" style="border-top: none">
                            <tr>
                                <td align="right" class="col-xs-2" style="border-top: none"><b>Ime:</b></td>
                                <td align="left" class="col-xs-2" style="border-top: none">
                                    @Html.HiddenFor(model => model.Id)
                                    @Html.EditorFor(model => model.firstName, new { htmlAttributes = new { @class = "form-control" } })
                                </td>
                                <td align="right" class="col-xs-2" style="border-top: none"><b>Prezime:</b></td>
                                <td align="left" class="col-xs-2" style="border-top: none">
                                    @Html.EditorFor(model => model.lastName, new { htmlAttributes = new { @class = "form-control" } })
                                </td>
                                <td align="left" class="col-xs-4" style="border-top: none"></td>
                            </tr>

                            <tr>
                                <td align="right" class="col-xs-2" style="border-top: none"><b>Datum rođenja:</b></td>
                                <td align="left" class="col-xs-2" style="border-top: none">
                                    @Html.EditorFor(model => model.dateOfBirth, new { htmlAttributes = new { @class = "form-control", @id = "datepicker" } })
                                </td>

                                <td align="right" class="col-xs-2" style="border-top: none"><b>Spol:</b></td>
                                <td align="left" class="col-xs-2" style="border-top: none">
                                    M @Html.RadioButtonFor(m => m.spol, "M") Ž @Html.RadioButtonFor(m => m.spol, "Ž")
                                </td>
                                <td align="right" class="col-xs-4" style="border-top: none"></td>

                            </tr>
                            <tr>

                                <td align="right" class="col-xs-2" style="border-top: none"><b>Licencirati?:</b></td>
                                <td align="left" class="col-xs-2" style="border-top: none">
                                    @Html.CheckBoxFor(m => m.licenceValid, true)
                                </td>
                                <td align="right" class="col-xs-4" style="border-top: none"></td>
                            </tr>

                            <tr>
                                <td style="border-top:none" />
                            </tr>
                        </table>
                        <div class="form-group">
                            <div class="form-group">
                                <div class="col-xs-12" align="right">
                                    <input type="submit" value="Dodaj" class="btn btn-success" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr />
    <br />


}

@Html.ActionLink("Natrag na moj klub", "MyClub", null, new { @class = "btn btn-primary" })


@section scripts{
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="~/lib/jquery-ui/jquery-ui.js"></script>

    <script>
        $(function () {
            $("#datepicker").datepicker({ dateFormat: 'dd-mm-yy' }).val('');
        });
        $(function () {
            $("#datepicker2").datepicker({ dateFormat: 'dd-mm-yy' }).val('');
        });
