@model IEnumerable<PlivanjeWeb.Models.SwimmerViewModel>
@{
    ViewBag.Title = "AddSwimmersToRace";
}

<h2>Prijavi plivača za trku</h2>
@{

    var gr = TempData["ErrorAddSwimmer"];
    var msgErr = "";
    if (gr != null)
    {
        msgErr = gr.ToString();
    }
}

@if (!string.IsNullOrWhiteSpace(msgErr))
{
    <div class="alert alert-danger alert alert-dismissible" role="alert">
        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
        @msgErr
    </div>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>

                Ime

            </th>

            <th>

                Prezime

            </th>
            <th>

                Spol

            </th>
            <th>

                Datum rođenja
            </th>


    </thead>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.firstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.lastName)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.gender)
            </td>
            <td>
                @item.dateOfBirth.ToShortDateString()
            </td>



            <td style="width: 1%;white-space: nowrap;">
                <button class="btn btn-success btn-sm">
                    <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
                    @Html.ActionLink("Prijavi za trku", "AddSwimmerToRace", "Competition", new { idSwimmer = item.Id }, null)
                </button>
            </td>



        </tr>

    }




</table>



