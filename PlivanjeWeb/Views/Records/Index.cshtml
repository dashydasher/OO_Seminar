@model PlivanjeWeb.Models.RecordsViewModel
@{
    ViewBag.Title = "Index";
}

<h2>Popis rekorda</h2>

<hr />

<h3>Muški:</h3>
<table class="table table-hover">
    <thead style="border-bottom:inset; border-bottom-color:blue;background-color:lightskyblue">
        <tr style="border-bottom: none">
            @{
        string[] nazivi = { "Ime", "Prezime", "Godina rođenja", "Stil", "Kategorija", "Duljina", "Mjesto i datim", "Rezultat" };
        for (int i = 0; i < nazivi.Length; i++)
        {
            <th>
                @nazivi[i]
            </th>
            }
            }
            <th></th>

        </tr>
    </thead>
    @if (Model != null)
    {
        foreach (var item in Model.man)
        {
            <tr class="table-hover">
                <td>
                    @item.FirstName
                </td>
                <td>
                    @item.LastName
                </td>
                <td>
                    @item.DateOfBirth.
                </td>
                <td>
                    @item.Style
                </td>
                <td>
                    @item.Category
                </td>
                <td>
                    @item.Length
                </td>
                <td>
                    @item.Place @item.Date.Date.ToShortDateString()
                </td>
                <td>
                    @item.RaceTime.TimeOfDay
                </td>

            </tr>
        }
    }
</table>

<h3>Ženski:</h3>
<table class="table table-hover">
    <thead style="border-bottom:solid; border-bottom-color:darkgreen; background-color:darkseagreen">
        <tr style="border-bottom: none">
            @{
        string[] naziviŽ = { "Ime", "Prezime", "Godina rođenja", "Stil", "Kategorija", "Duljina", "Mjesto i datim", "Rezultat" };
        for (int i = 0; i < nazivi.Length; i++)
        {
            <th>
                @naziviŽ[i]
            </th>
}
            }
            <th></th>
        </tr>
    </thead>
    @if (Model != null)
    {
        foreach (var item in Model.women)
        {
            <tr class="table-hover">
                <td>
                    @item.FirstName
                </td>
                <td>
                    @item.LastName
                </td>
                <td>
                    @item.DateOfBirth.
                </td>
                <td>
                    @item.Style
                </td>
                <td>
                    @item.Category
                </td>
                <td>
                    @item.Length
                </td>
                <td>
                    @item.Place @item.Date.Date.ToShortDateString()
                </td>
                <td>
                    @item.RaceTime.TimeOfDay
                </td>

            </tr>
        }
    }
</table>
